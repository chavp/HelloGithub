@model List<GodLibrary.Human>
           
@{
    ViewBag.Title = "Humans";
}

<h2>Humans</h2>

@{
    //http://weblogs.asp.net/shijuvarghese/archive/2010/10/08/using-the-webgrid-helper-in-asp-net-mvc-3-beta.aspx

    var grid = new WebGrid(source: Model,
                defaultSort: "FirstName",
                rowsPerPage: 10);
}


<div id="grid">
    @grid.GetHtml(
        tableStyle: "myGrid",
        headerStyle: "head",
        alternatingRowStyle: "alt",
        columns: grid.Columns(
            grid.Column("Name"),
            grid.Column("Power")
        )
    )
</div>

<div><label id="message"></label></div>
<script src="../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.timer.js" type="text/javascript"></script>
<script language=javascript>
    function callback() {
        setTimeout(function () {
            $("#message").removeAttr("style").hide().fadeIn();
        }, 1000);
    };
    function runEffect() {
        var options = {};
        // run the effect Pulsate
        $("#message").effect("pulsate", options, 500, callback); //Highlight
    };

    $(function () {
        $.timer(3000, function (timer) {
            $.ajax({
                type: "POST",
                url: "../GodService.asmx/GetMessages",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (msg) {
                    if (msg.d) {
                        if ($('#message').text() != msg.d) {
                            runEffect();
                            $('#message').text(msg.d);
                        }
                    }
                },
                error: function () {
                    
                }
            });
        });
    });
</script>